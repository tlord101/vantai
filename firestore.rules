rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@vant.io';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if request.auth != null;
      
      // Users can update their own profile, or admin can update any
      allow write: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
    }
    
    // Subscriptions collection
    match /subscriptions/{userId} {
      // Users can read their own subscription, or admin can read any
      allow read: if request.auth != null && 
                    (request.auth.uid == userId || isAdmin());
      
      // Users can create/update their own subscription, or admin can manage any
      allow write: if request.auth != null && 
                     (request.auth.uid == userId || isAdmin());
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
